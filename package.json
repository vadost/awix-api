{
  "name": "awix-api",
  "version": "0.0.1",
  "description": "Backend for AWIX project",
  "main": "dist/app/app.js",
  "scripts": {
    "build": "rm -rf dist/app && tsc -p src/tsconfig.app.json",
    "sync": "node dist/app/models/sync.js",
    "sync:production": "NODE_ENV=production npm run sync",
    "sync:testing": "NODE_ENV=testing npm run sync",
    "premigrate": "rm -rf dist/migrations && tsc -p migrations/tsconfig.migrations.json",
    "migrate": "sequelize db:migrate",
    "migrate:production": "npm run migrate -- --env production",
    "start": "node dist/app/app.js",
    "prestart:development": "npm run build && npm run sync && npm run migrate",
    "start:development": "npm start",
    "prestart:production": "npm run build && npm run sync:production && npm run migrate:production",
    "start:production": "NODE_ENV=production npm start",
    "prestart:e2e-app": "npm run build && npm run sync:testing",
    "start:e2e-app": "NODE_ENV=testing PORT=3001 npm start",
    "predev": "npm run build && npm run sync && npm run migrate && npm run sync:testing",
    "dev": "concurrently --kill-others \"tsc -w -p src/tsconfig.app.json\" \"nodemon dist/app/app.js\" \"NODE_ENV=testing PORT=3001 nodemon dist/app/app.js\"",
    "test": "rm -rf dist/spec && tsc -p src/tsconfig.spec.json && jasmine --config=src/jasmine.spec.json",
    "e2etest": "rm -rf dist/e2e && tsc -p e2e/tsconfig.e2e.json && jasmine --config=e2e/jasmine.e2e.json",
    "lint": "tslint -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/misticwonder/awix-api.git"
  },
  "author": "Andrey Korovin",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "body-parser": "^1.17.1",
    "cors": "^2.8.3",
    "express": "^4.15.2",
    "jsonwebtoken": "^7.3.0",
    "pg": "^6.1.5",
    "pg-hstore": "^2.3.2",
    "sequelize": "^3.30.4"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.3",
    "@types/cors": "^2.8.1",
    "@types/express": "^4.0.35",
    "@types/jasmine": "^2.5.47",
    "@types/jsonwebtoken": "^7.2.0",
    "@types/pg": "^6.1.39",
    "@types/request": "0.0.43",
    "@types/sequelize": "^4.0.51",
    "concurrently": "^3.4.0",
    "jasmine": "^2.6.0",
    "nodemon": "^1.11.0",
    "request": "^2.81.0",
    "sequelize-cli": "^2.7.0",
    "tslint": "^5.0.0",
    "typescript": "^2.2.2"
  }
}
